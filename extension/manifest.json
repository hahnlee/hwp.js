{
  "manifest_version": 2,
  "name": "hwp.js",
  "version": "1.2",
  "description": "hwp web viewer",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "webNavigation",
    "http://*/*.hwp",
    "https://*/*.hwp",
    "file://*/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources": [
    "content/viewer.html",
    "http:/*",
    "https:/*",
    "ftp:/*",
    "file:/*",
    "chrome-extension:/*",
    "blob:*",
    "data:*",
    "filesystem:/*",
    "drive:*"
  ]
}
